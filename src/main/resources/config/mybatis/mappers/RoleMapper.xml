<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.silita.dao.IRoleMapper">

    <resultMap id="RoleResult" type="com.silita.model.TbRole">
        <id property="rid" column="rid"/>
        <result property="roleName" column="role_name"/>
        <result property="desc" column="desc"/>
    </resultMap>

    <select id="listRoleByUserName" parameterType="String" resultType="java.lang.String">
        SELECT r.role_name
        FROM tb_user u
        LEFT JOIN tb_user_role ur ON u.uid = ur.uid
        LEFT JOIN tb_role r ON ur.rid = r.rid
        WHERE u.user_name = #{userName}
    </select>
</mapper>